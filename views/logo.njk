{% extends "layout.njk" %}

{% block head %}

    <title>{{ item.subtitle }}</title>

{% endblock %}

{% block content %}

    <div id="wrapper" class="logo">
        <h1>{{ item.subtitle }}</h1>
    </div>

    <section class="logo">

        <div class="card" id="{{ item.id }}">
            <div class="card_image-container {{ 'featured-wrapper' if item.featured }}">
                <img src="HS.jpg" alt="">
                {% if item.featured %}
                    <div class="featured">
                        Featured
                    </div>
                {% endif %}
            </div>
            <div class="card_content">
                <p>
                    {{ item.title }}
                </p>
            </div>
            <div class="card_info">
                <p>{{ item.duration }}</p>
                <p class="card_price">{{ item.price }}</p>
            </div>
        </div>

    </section>
    <br>
    <br>

{% endblock %}